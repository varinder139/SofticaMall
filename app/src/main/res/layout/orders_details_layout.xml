<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:background="@color/colorAccent"
    android:elevation="3dp">

    <ImageView
        android:id="@+id/od_product_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/mobileimage" />

    <TextView
        android:id="@+id/od_product_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Pixel XL 2"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/od_product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Rs. 49999/-"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/od_product_image"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/od_pro_qty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="@drawable/border_background"
        android:backgroundTint="#000000"
        android:padding="3dp"
        android:text="Qty: 1"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/od_product_image"
        app:layout_constraintEnd_toStartOf="@+id/od_product_image" />

    <View
        android:id="@+id/divider11"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/od_product_image" />

    <ImageView
        android:id="@+id/od_order_indiator"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider11"
        app:srcCompat="@drawable/selected_dot"
        app:tint="@color/RecyclerViewBackground" />

    <ProgressBar
        android:id="@+id/od_order_packed_progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="60dp"
        android:layout_height="3dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="8dp"
        android:progress="0"
        android:progressBackgroundTint="@color/RecyclerViewBackground"
        android:progressTint="@color/successGreen"
        android:rotation="90"
        android:transformPivotX="0dp"
        app:layout_constraintStart_toStartOf="@+id/od_order_indiator"
        app:layout_constraintTop_toTopOf="@+id/od_order_indiator" />

    <ImageView
        android:id="@+id/od_packed_indiator"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/od_order_indiator"
        app:srcCompat="@drawable/selected_dot"
        app:tint="@color/RecyclerViewBackground" />

    <ProgressBar
        android:id="@+id/od_packed_shiffing_progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="61dp"
        android:layout_height="3dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/RecyclerViewBackground"
        android:progress="0"
        android:progressTint="@color/successGreen"
        android:rotation="90"
        android:transformPivotX="0dp"
        app:layout_constraintStart_toStartOf="@+id/od_packed_indiator"
        app:layout_constraintTop_toTopOf="@+id/od_packed_indiator" />

    <ImageView
        android:id="@+id/od_shiping_indiator"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/od_packed_indiator"
        app:srcCompat="@drawable/selected_dot"
        app:tint="@color/RecyclerViewBackground" />

    <ProgressBar
        android:id="@+id/od_shipping_delived_progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="60dp"
        android:layout_height="3dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/RecyclerViewBackground"
        android:progress="0"
        android:progressTint="@color/successGreen"
        android:rotation="90"
        android:transformPivotX="0dp"
        app:layout_constraintStart_toStartOf="@+id/od_shiping_indiator"
        app:layout_constraintTop_toTopOf="@+id/od_shiping_indiator" />

    <ImageView
        android:id="@+id/od_delived_indicator"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/od_shiping_indiator"
        app:srcCompat="@drawable/selected_dot"
        app:tint="@color/RecyclerViewBackground" />

    <TextView
        android:id="@+id/od_orded_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Ordered"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/od_order_indiator"
        app:layout_constraintStart_toEndOf="@+id/od_order_indiator"
        app:layout_constraintTop_toTopOf="@+id/od_order_indiator" />

    <TextView
        android:id="@+id/od_orded_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Monday 12th Jan 2021 - 7:00 AM"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/od_orded_title"
        app:layout_constraintStart_toEndOf="@+id/od_orded_title"
        app:layout_constraintTop_toTopOf="@+id/od_orded_title"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/od_orded_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Yuor order has been placed."
        android:textColor="#000000"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@+id/od_orded_title"
        app:layout_constraintTop_toBottomOf="@+id/od_orded_title" />

    <TextView
        android:id="@+id/od_packed_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Packed"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/od_packed_indiator"
        app:layout_constraintStart_toEndOf="@+id/od_packed_indiator"
        app:layout_constraintTop_toTopOf="@+id/od_packed_indiator" />

    <TextView
        android:id="@+id/od_packed_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Monday 12th Jan 2021 - 7:00 AM"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/od_packed_title"
        app:layout_constraintStart_toEndOf="@+id/od_packed_title"
        app:layout_constraintTop_toTopOf="@+id/od_packed_title" />

    <TextView
        android:id="@+id/od_packed_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Your Order has been Packed"
        android:textColor="#000000"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@+id/od_packed_title"
        app:layout_constraintTop_toBottomOf="@+id/od_packed_title" />

    <TextView
        android:id="@+id/od_shipping_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Shipping"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/od_shiping_indiator"
        app:layout_constraintStart_toEndOf="@+id/od_shiping_indiator"
        app:layout_constraintTop_toTopOf="@+id/od_shiping_indiator" />

    <TextView
        android:id="@+id/od_shipping_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Monday 12th Jan 2021 - 7:00 AM"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/od_shipping_title"
        app:layout_constraintStart_toEndOf="@+id/od_shipping_title"
        app:layout_constraintTop_toTopOf="@+id/od_shipping_title" />

    <TextView
        android:id="@+id/od_shipping_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Your order has been Shiffed"
        android:textColor="#000000"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@+id/od_shipping_title"
        app:layout_constraintTop_toBottomOf="@+id/od_shipping_title" />

    <TextView
        android:id="@+id/od_delived_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Delivered"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/od_delived_indicator"
        app:layout_constraintStart_toEndOf="@+id/od_delived_indicator"
        app:layout_constraintTop_toTopOf="@+id/od_delived_indicator" />

    <TextView
        android:id="@+id/od_delived_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Monday 12th Jan 2021 - 7:00 AM"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/od_delived_title"
        app:layout_constraintStart_toEndOf="@+id/od_delived_title"
        app:layout_constraintTop_toTopOf="@+id/od_delived_title"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/od_delived_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Your ordered has been delivered"
        android:textColor="#000000"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@+id/od_delived_title"
        app:layout_constraintTop_toBottomOf="@+id/od_delived_title" />

    <LinearLayout
        android:id="@+id/rate_now_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView35">

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/icon_star"
            app:tint="#bebebe" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/icon_star"
            app:tint="#bebebe" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/icon_star"
            app:tint="#bebebe" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/icon_star"
            app:tint="#bebebe" />

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/icon_star"
            app:tint="#bebebe" />
    </LinearLayout>

    <View
        android:id="@+id/divider12"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="32dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/od_delived_body" />

    <TextView
        android:id="@+id/textView35"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Your Rating"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider12" />

    <Button
        android:id="@+id/cancel_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/colorPrimary"
        android:stateListAnimator="@null"
        android:text="Cancel order"
        android:textAllCaps="false"
        android:textColor="@color/colorAccent"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rate_now_container" />
</androidx.constraintlayout.widget.ConstraintLayout>